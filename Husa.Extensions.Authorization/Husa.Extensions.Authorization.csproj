<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Husa.Extensions.Authorization</AssemblyName>
        <RootNamespace>Husa.Extensions.Authorization</RootNamespace>
        <Product>Authorization Extensions</Product>
        <Description>Husa Authorization</Description>
        <PackageId>Husa.Extensions.Authorization</PackageId>
        <Version>0.2.0</Version>
        <PackageTags>Extensions; Authorization;</PackageTags>
        <PackageReleaseNotes>
            Release 0.2.0:
            - Added sonarqube coding standards analyzer.
            - Updated code according to new coding standards.
            - Added bootstrapping extension
            - Added validation to prevent failure when retrieving the current user id
            - Added UserRole to UserContext and filters
        </PackageReleaseNotes>
        <IsPackable>true</IsPackable>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
        <PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.0" />
    </ItemGroup>
</Project>
