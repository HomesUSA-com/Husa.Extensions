<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Husa.Extensions.Authorization</AssemblyName>
        <RootNamespace>Husa.Extensions.Authorization</RootNamespace>
        <Product>Authorization Extensions</Product>
        <Description>Husa Authorization</Description>
        <PackageId>Husa.Extensions.Authorization</PackageId>
        <Version>2.1.0</Version>
        <PackageTags>Extensions; Authorization;</PackageTags>
        <PackageReleaseNotes>
            Release 2.1.0:
            - Fixed issue when getting the current user id and the current user is not set
            - Converted the HasCurrentUser method to a class property
            - Corrected an issue with the log messages that were not logging the parameters correctly
        </PackageReleaseNotes>
        <IsPackable>true</IsPackable>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
        <PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
    </ItemGroup>
</Project>
