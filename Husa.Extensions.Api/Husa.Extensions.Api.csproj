<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AssemblyName>Husa.Extensions.Api</AssemblyName>
        <RootNamespace>Husa.Extensions.Api</RootNamespace>
        <Product>Api Extensions</Product>
        <Description>Husa Api</Description>
        <PackageId>Husa.Extensions.Api</PackageId>
        <Version>0.3.0</Version>
        <PackageTags>Extensions; Api;</PackageTags>
        <PackageReleaseNotes>
            Release 0.3.0:
            - Added new extensions class to concatenate query string params
            - Reorganized http client namespaces
        </PackageReleaseNotes>
        <IsPackable>true</IsPackable>
